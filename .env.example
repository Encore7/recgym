# GLOBAL SETTINGS
ENVIRONMENT=local
LOG_LEVEL=INFO

# KAFKA (Shared)
KAFKA__BOOTSTRAP_SERVERS=kafka:9092
KAFKA__SCHEMA_REGISTRY_URL=http://schema-registry:8081
KAFKA__INPUT_TOPIC=events_raw
KAFKA__OUTPUT_TOPIC=raw-events
KAFKA__CONSUMER_GROUP=recgym-consumer
KAFKA__USER_FEATURE_TOPIC=user_features_rt
KAFKA__ITEM_FEATURE_TOPIC=item_features_rt

# S3 / MINIO (Shared)
S3__BUCKET=recgym-raw
S3__ENDPOINT_URL=http://minio:9000
S3__ACCESS_KEY=minioadmin
S3__SECRET_KEY=minioadmin

# OTEL (flat vars)
OTEL_SERVICE_NAME=recgym-service
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=local

# OTEL (nested vars)
OTEL__OTLP_ENDPOINT=http://otel-collector:4317
OTEL__RESOURCE_ATTRIBUTES=deployment.environment=local

# GENERATOR SERVICE SETTINGS
GENERATOR__USER_COUNT=100
GENERATOR__ITEM_COUNT=1000
GENERATOR__SESSION_LENGTH_MIN=2
GENERATOR__SESSION_LENGTH_MAX=6
GENERATOR__BASE_EVENT_DELAY_SEC=0.5
GENERATOR__SCHEMA_DIR=/app/infra/schemas

# INGESTION SERVICE SETTINGS
INGESTION__BATCH_SIZE=5000
INGESTION__FLUSH_INTERVAL_SEC=30.0

# REDIS (GLOBAL ONLINE STORE)
REDIS__HOST=redis
REDIS__PORT=6379
REDIS__DB=0
REDIS__TTL_SEC=3600
REDIS__USER_PREFIX=user_features_rt:
REDIS__ITEM_PREFIX=item_features_rt:

# REALTIME (Flink-only)
RT__PARALLELISM=1
RT__CHECKPOINT_DIR=file:///tmp/flink-checkpoints
